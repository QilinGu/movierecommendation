# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Register.home()
GET     /register                   controllers.Register.register()
GET     /user                        controllers.Register.user(user)
GET     /recommendations/:user      controllers.Register.recommend(user)
POST    /                           controllers.Register.signin()
POST    /register                   controllers.Register.submit()
POST    /register/:user             controllers.Register.addMovies(user)
POST    /recommendations/:user      controllers.Register.submitrec(user)
GET     /logout                     controllers.Register.signout(user)
GET     /updating                   controllers.Register.updating()




# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
